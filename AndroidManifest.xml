<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.emergencyphonecall"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.Fragments.MainActivity"
            android:label="@string/app_name" >
            
        </activity>
        <activity
            android:name="com.example.Fragments.DevisionsActivity"
            android:label="@string/title_activity_devisions" >
        </activity>
        <activity
            android:name="com.example.Fragments.DistrictsActivity"
            android:label="@string/title_activity_districts" >
        </activity>
        <activity
            android:name="com.example.Fragments.ThanaActivity"
            android:label="@string/title_activity_thana" >
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.Fragments.CallingActivity"
            android:label="@string/title_activity_calling" >
        </activity>
        <activity
            android:name="com.example.Fragments.InputThanaActivity"
            android:label="@string/title_activity_input_thana" >
        </activity>
        <activity
            android:name="com.example.Fragments.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.example.Fragments.Tabs"
            android:label="@string/title_activity_tab" >
        </activity>
        <activity
            android:name="com.example.Fragments.District"
            android:label="@string/title_activity_district"
            android:parentActivityName="android.support.v4.app.FragmentActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.support.v4.app.FragmentActivity" />
        </activity>
    </application>

</manifest>

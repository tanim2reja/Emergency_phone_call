<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android1:gravity="top"
    tools:context=".MainActivity"
    android:background="@drawable/wood"
     >

    <Button
        android1:id="@+id/fireService"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_alignParentRight="true"
        android1:layout_alignParentTop="true"
        android1:layout_marginTop="17dp"
        android1:onClick="fireServiceClick"
        android1:text="Fire Service"
        android:textColor="#FFFFFF"         />

    <Button
        android1:id="@+id/hospital"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/fireService"
        android1:layout_alignRight="@+id/fireService"
        android1:layout_below="@+id/fireService"
        android1:onClick="hospitalClick"
        android1:text="Hospital" 
        android:textColor="#FFFFFF"
       
        />

    <Button
        android1:id="@+id/ambulance"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/button1"
        android1:layout_alignParentBottom="true"
        android1:layout_alignRight="@+id/button1"
        android1:text="Ambulance"
        android:textColor="#FFFFFF"
        android:onClick="ambulenceClick"
        
         />

    <Button
        android1:id="@+id/button1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/ambulance"
        android1:layout_alignLeft="@+id/hospital"
        android1:layout_alignParentRight="true"
        android1:layout_marginBottom="11dp"
        android1:onClick="policeClick"
        android1:text="policecar"
        android:textColor="#FFFFFF"
         />

</RelativeLayout>
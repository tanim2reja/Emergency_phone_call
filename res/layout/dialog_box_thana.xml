<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/email_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/call_button"
        android:layout_below="@+id/telephone_number_txt_view"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email_address"
        android:layout_alignRight="@+id/call_button"
        android:layout_below="@+id/email_address"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/mobile_number_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email_address"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/call_button"
        android:layout_marginTop="30dp"
        android:textColor="#007FFF"
         />

    <TextView
        android:id="@+id/telephone_number_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email_address"
        android:layout_alignRight="@+id/mobile_number_txt_view"
        android:layout_below="@+id/mobile_number_txt_view"
        android:layout_marginTop="22dp" 
        android:textColor="#007FFF"
        />

    <Button
        android:id="@+id/call_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nearest_thana_button"
        android:layout_alignBottom="@+id/nearest_thana_button"
        android:layout_alignParentRight="true"
        android:layout_marginRight="31dp"
        android:background="#8DB600" />

    <Button
        android:id="@+id/nearest_thana_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/address"
        android:layout_below="@+id/address"
        android:layout_marginTop="16dp"
        android:background="#DCDCDC"
        android:textColor="#007FFF" />

</RelativeLayout>